{{ define "pager" }}
  {{ if .Page }}
    {{ if gt .Page.TotalPages 1 }}
      <nav><ul class="pagination">{{if not .Page.IsFirst -}}
            <li><a href="/" title="first">First</a></li>
          {{- end -}}
          {{- if .Page.HasPrevious -}}
            <li><a href="/?page={{ .Page.Previous }}" title="previous">«</a></li>
          {{- end -}}
          {{- range .Page.Pages -}}
            <li class="{{if .IsCurrent}}active{{end}}">
              {{- if eq .Num -1 -}}
                <span>...</span>
              {{- else -}}
                <a href="/?page={{ .Num }}" title="page {{ .Num }}">{{.Num}}</a>
              {{- end -}}
            </li>
          {{- end -}}
          {{- if .Page.HasNext -}}
            <li><a href="/?page={{ .Page.Next }}" title="next">»</a></li>
          {{- end -}}
          {{- if not .Page.IsLast -}}
            <li><a href="/?page={{ .Page.TotalPages }}" title="last">Last</a></li>
          {{- end -}}
      </ul></nav>
    {{ end }}
  {{ end }}
{{ end }}