{{ define "title" }}<title>Arkivi | tags</title>{{ end }}
{{ define "content" }}
  <form action="/tags/" method="GET">
    <label>Sort by: 
      <select name="sort">
        <option value="alpha-asc" {{ if eq .sort "alpha-asc" }}selected{{ end }}>A - Z</option>
        <option value="alpha-desc" {{ if eq .sort "alpha-desc" }}selected{{ end }}>Z - A</option>
        <option value="count-desc" {{ if eq .sort "count-desc" }}selected{{ end }}>Highest # Images</option>
        <option value="count-asc" {{ if eq .sort "count-asc" }}selected{{ end }}>Lowest # Images</option>
      </select>
    </label>
    <input type="submit" value="submit">
  </form>
  <ul id="tags">
    {{ range .tags }}
      <li>
        <div class="row">
          <div class="col-xs-8">
            <a href="/images/tag/{{ .Name }}" title="images tagged with {{ .Name }}">
              {{ .Name }}
            </a>
          </div>
          <div class="col-xs-4"><span>{{ .Count }}</span></div>
        </div>
      </li>
    {{ end }}
  </ul>
{{ end }}